.table
  width 100%

.table-link
  transition(all, 0.2s, linear)
  display block

.table-link-hover
  color table-featured-color
  text-decoration underline
  opacity .6
  transition(all, 0.2s, linear)

.tr
  border 1px solid #16557A

.th
  height 50px
  min-width 150px
  text-align center
  color #FFF
  font-weight normal
  font-size rem(16px)
  background linear-gradient(to bottom, #1C94C4, #16557A)
  transition(all, 0.2s, linear)

.tr-selected
  background linear-gradient(to bottom, #eacdaf, #ceac8a) !important

.td
  min-width 150px
  height 50px
  color #333
  padding 5px
  text-align center
  border-bottom 1px solid #16557A
  border-left 1px solid #16557A
  border-right  1px solid #16557A

.tr-action
  min-width 75px

.td-action
  min-width 75px

.table-image-icon
  width 30px
  height 30px
  margin-top 5px

.tr-odd
  background #fff
  color #333
  height 40px

.tr-even
  @extends .tr-odd
  background #eee

.tr-hover
  gradient-linear(#d5e8f2, #b1c8d3)
  transition(all, 0.2s, linear)
  cursor pointer