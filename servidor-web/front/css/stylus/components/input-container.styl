.input-container
  margin-top 10px
  position relative

  > .label
    font-size(18px)
    color #666
    margin-left 2px

  > .messageValidation
    position absolute
    right -3px
    top 3px

  > .input
    width 100%
    height 40px
    border 1px solid $lightPrimaryColor
    color #666
    background-color #FFF
    font-size rem(16px)
    padding 0 7px
    margin-top 5px
    outline none
    &:focus
      box-shadow 0 0 2px $accentColor  solid
      transition(all, 0.2s, linear)
    &:focus:valid
      box-shadow 0 0 2px #0f0
      transition(all, 0.2s, linear)
    &:focus:invalid
      box-shadow 0 0 2px #f00
      transition(all, 0.2s, linear)

.size20
  width 19%

.size30
  width 29%

.size40
  width 39%

.size50
  width 49%

.messagevalidation
  color #FFF
  background #AF2828
  padding 5px
  opacity .9