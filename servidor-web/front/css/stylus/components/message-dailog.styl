.message-dialog
  position fixed
  top 10px
  right 10px
  width 350px
  min-height 100px
  background #eee
  box-shadow 0px 0px 2px #666
  padding 20px
  transition all linear 0.5s
  opacity .95
  z-index 1000

.message-dialog.ng-hide
  opacity 0
  transition all linear 0.5s

.message-dialog-titulo
  font-size rem(22px)
  color #BF6000

.message-dialog-mensagem
  font-size rem(17px)
  margin-top 10px
  color #666

.message-dialog-close
  position absolute
  top 10px
  right 15px
  font-size rem(18px)
  color #FF7E00
  cursor pointer